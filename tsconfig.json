{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "lib/*": ["./src/lib/*"],
      "platform/*": ["./src/platform/*"],
      "state/*": ["./src/state/*"],
      "view/*": ["./src/view/*"]
    },
    "strict": true
  }
}
